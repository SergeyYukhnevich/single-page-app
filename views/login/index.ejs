<%
    block('title', 'Please login!');
%>
<div class="content" ng-controller="LoginController" ng-cloak>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well m-top-50">
                <form ng-submit="submitLoginForm()" name="login" class="form-horizontal">
                    <h3 class="text-center">Please login!</h3>
                    <div class="alert alert-dismissible alert-danger" ng-show="showAlert">
                        <button type="button" class="close" ng-click="toggleAlert()">Ã—</button>
                        <span>loginForm.error</span>
                    </div>
                    <fieldset>
                        <div class="form-group has-feedback"
                             ng-class="{'has-error':login.email.$invalid && login.email.$dirty}">
                            <label for="email" class="col-md-4 control-label">Email Address</label>
                            <div class="col-md-8">
                                <input
                                        type="email"
                                        class="form-control"
                                        placeholder="Email Address"
                                        name="email"
                                        ng-model="loginForm.email"
                                        required>
                                <span ng-show="login.email.$invalid && login.email.$dirty" class="glyphicon glyphicon-warning-sign form-control-feedback" aria-hidden="true"></span>
                                <span class="help-block has-error" ng-show="login.email.$invalid && login.email.$dirty">
                                    <span ng-show="login.email.$error.required">Email address is required.</span>
                                    <span ng-show="login.email.$error.email">Email address is invalid.</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group has-feedback"
                             ng-class="{'has-error':login.password.$invalid && login.password.$dirty}">
                            <label for="password" class="col-md-4 control-label">Password</label>
                            <div class="col-md-8">
                                <input
                                        type="password"
                                        class="form-control"
                                        placeholder="Password"
                                        name="password"
                                        ng-model="loginForm.password"
                                        id="password"
                                        ng-minlength="6"
                                        required>
                                <span ng-show="login.password.$invalid && login.password.$dirty" class="glyphicon glyphicon-warning-sign form-control-feedback" aria-hidden="true"></span>
                                <span class="help-block has-error" ng-show="login.password.$invalid && login.password.$dirty">
                                    <span ng-show="login.password.$error.required">Password is required.</span>
                                    <span ng-show="login.password.$error.minlength">Password must be at least 6 characters.</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-4">
                                <button class="btn btn-success" type="submit" ng-disabled="login.$invalid">
                                    <span ng-show="!loginForm.loading">Login</span>
                                    <span ng-show="loginForm.loading">Loading...</span>
                                </button>
                            </div>
                        </div>
                        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>